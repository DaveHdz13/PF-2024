---
import "../styles/profileDetail.css";

const { profileName } = Astro.props;
---

<div class="profileDetail3D-container">
  <div class="header">
    <model-viewer src="models/futuristic-card.glb" auto-rotate></model-viewer>
    <h1 class="profile-name">Hi, I'm {profileName}</h1>
  </div>
  <div class="box-info">
    <div class="info-about">
      <h2>Current status:</h2>
      <p>Working as a Front-End developer 🤖</p>
      <div class="divider"></div>
      <h2>Experience fields:</h2>
      <ul>
        <li>Web Front-End 🦄</li>
        <li>Web 3D Develop 🗼</li>
        <li>Web Back-End 🧐</li>
      </ul>
      <div class="divider"></div>
    </div>
  </div>
</div>